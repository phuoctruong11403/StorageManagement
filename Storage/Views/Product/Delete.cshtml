@model Storage.Models.Product


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link type="text/css" rel="stylesheet" href="~/css/product-styles.css" />
</head>
<body>
    <div class="container">
        <h3 class="into">Are you sure you want to delete this?</h3>
        <div class="photo-index-card-details">
            <h3 class="display-picture-title">
                "@Html.DisplayFor(modelItem => modelItem.ProductType)"
            </h3>
            @if (Model.ImageName != null)
            {
                <div class="photo-display">
                    <img class="photo-display-img" src="@Url.Action("GetImage", "Product", new {Id = Model.ProductID})" />
                </div>            
             }
            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.ProductName)
                </p>
                <br />
                <p class="display-field">
                    @Html.DisplayFor(model => model.ProductName)
                </p>
            </div>

            <div>
                <p class="display-label">
                    @Html.DisplayNameFor(model => model.Price)
                </p>
                <p class="display-field">
                    @Html.DisplayFor(model => model.Price)
                </p>
            </div>
        </div>
        <form asp-action="Delete" asp-route-id="@Model.ProductID">
            <input type="hidden" asp-for="ProductID" />
            <input type="submit" value="Delete" /> |
            <a asp-action="ShowAll">Back to List</a>
        </form>
    </div>
</body>
</html>
