@using Storage.Models
@model Storage.Models.Product


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link type="text/css" rel="stylesheet" href="~/css/product-styles.css" />
</head>
<body>
    <div class="container">
        <h1 class="title">Edit a Product</h1>
        <form method="post" enctype="multipart/form-data" asp-action="Edit" asp-route-id="@Model.ProductID">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="ProductID" />
            <div class="form-field">
                <label asp-for="Class"></label>
                <select asp-for="ClassID" asp-items="ViewBag.ClassID">
                    <option selected="selected" value="">Select</option>
                </select>
                <span asp-validation-for="ClassID"></span>
            </div>
            <div class="form-field">
                <label asp-for="ProductType"></label>
                <select asp-for="ProductType" asp-items="Html.GetEnumSelectList<ProductType>()">
                    <option selected="selected" value="">Select</option>
                </select>
                <span asp-validation-for="ProductType"></span>
            </div>
            <div class="form-field">
                <label asp-for="ProductName"></label>
                <textarea asp-for="ProductName"></textarea>
                <span asp-validation-for="ProductName"></span>
            </div>
            <div class="form-field">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" />
                <span asp-validation-for="Brand"></span>
            </div>
            <div class="form-field">
                <label asp-for="Price"></label>
                <input asp-for="Price" />
                <span asp-validation-for="Price"></span>
            </div>
            <div>
                <input type="hidden" asp-for="ImageMimeType" />
                <input type="hidden" asp-for="ImageName" />
                @Html.HiddenFor(c => c.PhotoAvatar)
                @Html.HiddenFor(c => c.PhotoFile)
            </div>
            <div class="form-field">
                <input type="submit" value="Save" />
            </div>
        </form>
    </div>
</body>
</html>
