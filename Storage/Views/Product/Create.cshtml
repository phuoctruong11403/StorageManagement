@using Storage.Models
@model Storage.Models.Product

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" href="~/css/product-styles.css" />
</head>
<body>
    <div class="container">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="All"></div>
            <div class="form-field">
                <label asp-for="Class"></label>
                <select asp-for="ClassID" asp-items="ViewBag.ClassID">
                    <option selected="selected" value="">Select</option>
                </select>
                <span asp-validation-for="ClassID"></span>
            </div>
            <div class="form-field">
                <label asp-for="ProductType"></label>
                <select asp-for="ProductType" asp-items="Html.GetEnumSelectList<ProductType>()">
                    <option selected="selected" value="">Select</option>
                </select>
                <span asp-validation-for="ProductType"></span>
            </div>
            <div class="form-field">
                <label asp-for="ProductName"></label>
                <textarea asp-for="ProductName"></textarea>
                <span asp-validation-for="ProductName"></span>
            </div>
            <div class="form-field">
                <label asp-for="Price"></label>
                <input asp-for="Price" />
                <span asp-validation-for="Price"></span>
            </div>
            <div class="form-field">
                <label asp-for="PhotoAvatar"></label>
                <input asp-for="PhotoAvatar" type="file" />
                <span asp-validation-for="PhotoAvatar"></span>
            </div>
            <div class="form-field">
                <input type="submit" value="Submit" />
            </div>
        </form>
    </div>
</body>
</html>
