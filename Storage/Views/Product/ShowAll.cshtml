@model IEnumerable<Storage.Models.Product>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link type="text/css" rel="stylesheet" href="~/css/product-styles.css" />
</head>
<body>
    <div class="container">
        <div class="img-container">
            @foreach (var item in Model)
            {
                <div class="photo-index-card">
                <h3 class="display-picture-title">
                    @Html.DisplayFor(modelItem => item.ProductType)
                </h3>
                @if (item.ImageName != null)
                {
                    <div class="photo-display">
                        <img class="photo-display-img" src="@Url.Action("GetImage", "Product", new { Id = item.ProductID})" />
                    </div>
                }

                <div>
                    <p class="display-label">
                         @Html.DisplayNameFor(model => item.ProductName)
                    </p>
                    <br />
                    <p class="display-field">
                        @Html.DisplayFor(model => item.ProductName)
                    </p>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@item.ProductID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ProductID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
                </div>
                </div>            }
        </div>
    </div>

</body>
</html>
